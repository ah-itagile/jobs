<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <!-- MongoDB configuration -->

    <bean id="mongo" class="com.mongodb.Mongo">
        <constructor-arg index="0" value="127.0.0.1"/>
    </bean>

    <!-- Repository Definition -->

    <bean class="de.otto.jobstore.repository.JobInfoRepository">
        <constructor-arg index="0" ref="mongo"/>
        <constructor-arg index="1" value="jobstore"/>
        <constructor-arg index="2" value="jobs"/>
    </bean>

    <bean class="de.otto.jobstore.service.RemoteJobExecutorService">
        <constructor-arg index="0" value="http://127.0.0.1:5000/jobs/"/>
        <!-- constructor-arg index="0" value="http://fh02.develop-ci.lhotse.ov.otto.de:5000/jobs/"/ -->
    </bean>

</beans>
