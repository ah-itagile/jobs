<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <!-- MongoDB configuration -->

    <bean id="mongo" class="com.mongodb.Mongo">
        <constructor-arg index="0" value="127.0.0.1"/>
    </bean>

    <!-- Repository Definition -->

    <bean class="de.otto.jobstore.repository.impl.MongoJobInfoRepository">
        <constructor-arg index="0" ref="mongo"/>
        <constructor-arg index="1" value="jobstore"/>
        <constructor-arg index="2" value="jobs"/>
    </bean>

    <bean class="de.otto.jobstore.service.impl.RemoteJobExecutorServiceImpl">
        <constructor-arg index="0" value="http://localhost:5000/jobs/"/>
        <constructor-arg index="1" ref="httpClient"/>
    </bean>

    <bean id="httpClient" class="com.sun.jersey.client.apache.ApacheHttpClient">
        <constructor-arg>
            <bean class="com.sun.jersey.client.apache.ApacheHttpClientHandler">
                <constructor-arg>
                    <bean id="baseHttpClient" class="org.apache.commons.httpclient.HttpClient">
                        <constructor-arg>
                            <bean class="org.apache.commons.httpclient.MultiThreadedHttpConnectionManager">
                                <property name="params">
                                    <bean class="org.apache.commons.httpclient.params.HttpConnectionManagerParams">
                                        <property name="defaultMaxConnectionsPerHost" value="100" />
                                        <property name="maxTotalConnections" value="100" />
                                        <property name="connectionTimeout" value="50000"/>
                                        <property name="soTimeout" value="50000"/>
                                    </bean>
                                </property>
                            </bean>
                        </constructor-arg>
                    </bean>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>

</beans>
